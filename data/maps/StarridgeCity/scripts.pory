script StarridgeCity_EventScript_AmphyKidnapped {
    lockall
    clearflag(FLAG_HIDE_ROUTE_304_UPSILON_GRUNT)

    applymovement(OBJ_JASMINE, StarridgeCity_Movement_JasmineApproachPlayer)
    waitmovement(0)
    applymovement(OBJ_EVENT_ID_PLAYER, StarridgeCity_Movement_PlayerFaceDown)

    speakername("Jasmine")
    msgbox(StarridgeCity_Text_AmphyKidnapped_Jasmine1, MSGBOX_YESNO)
    while (var(VAR_RESULT) != YES)
    {
        msgbox(StarridgeCity_Text_AmphyKidnapped_ButWhy, MSGBOX_YESNO)
    }
    msgbox(StarridgeCity_Text_AmphyKidnapped_Jasmine2)
    setvar(VAR_STARRIDGE_CITY_STATE, 2)
    closemessage
}

movement StarridgeCity_Movement_PlayerFaceDown {
    walk_in_place_down
}

movement StarridgeCity_Movement_PlayerFaceRight {
    walk_in_place_right
}

movement StarridgeCity_Movement_PlayerWalkDown {
    walk_down * 3
}

movement StarridgeCity_Movement_PlayerWalkDown2 {
    walk_down
}

movement StarridgeCity_Movement_JasmineApproachPlayer {
    walk_fast_up * 5
}

movement StarridgeCity_Movement_JasmineApproachPlayer1 {
    walk_fast_left * 2
}

movement StarridgeCity_Movement_JasmineApproachPlayer2 {
    walk_fast_left
}

movement StarridgeCity_Movement_JasmineWalkBack1 {
    walk_fast_right * 2
}

movement StarridgeCity_Movement_JasmineWalkBack2 {
    walk_fast_right
}

movement StarridgeCity_Movement_JasmineFaceLeft {
    walk_in_place_fast_left
}

movement StarridgeCity_Movement_JasmineWait1 {
    walk_down
    walk_right * 3
}

movement StarridgeCity_Movement_JasmineWait2 {
    walk_down
    walk_right * 2
}

movement StarridgeCity_Movement_JasmineWait3 {
    walk_down
    walk_right
}

text StarridgeCity_Text_AmphyKidnapped_Jasmine1 {
    format("{PLAYER}!"
            "T-Team Upsilon... they... they took Amphy...\p"
            "It happened so fast! I was about to head out when a couple of those Team Upsilon grunts stormed in.\p"
            "They grabbed Amphy and ran off! I tried to stop them, but they were too fast!\p"
            "I'd go after them myself, but I have to stay here in case they come back for something else.\p"
            "{PLAYER}...I know you're strong--can you go after them?"
    )
}

