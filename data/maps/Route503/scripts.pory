    applymovement(OBJ_EVENT_ID_PLAYER, Route503_Movement_PlayerFaceDown)
    applymovement(OBJ_MOM, Route503_Movement_MomApproachPlayer1)
    waitmovement(0)

    goto(Route503_GetPokeNav)
}

