movement Route503_AsterStepBack {
    lock_facing_direction
    walk_right
    unlock_facing_direction
}

movement Route503_AsterLeave {
    walk_left
    walk_up * 6
}

movement Route503_RivalLeave {
    walk_right * 7
    walk_down * 4
}

